<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_graph"
    app:startDestination="@id/fragment_splash">

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.adasoraninda.dicodingstoryapp.features.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/nav_splash_to_auth"
            app:destination="@id/activity_auth" />

        <action
            android:id="@+id/nav_splash_to_story"
            app:destination="@id/activity_story" />

    </fragment>

    <activity
        android:id="@+id/activity_auth"
        android:name="com.adasoraninda.dicodingstoryapp.features.auth.AuthActivity"
        tools:layout="@layout/activity_auth" />

    <activity
        android:id="@+id/activity_story"
        android:name="com.adasoraninda.dicodingstoryapp.features.story.StoryActivity"
        tools:layout="@layout/activity_story" />

</navigation>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DicodingStoryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/pink</item>
        <item name="colorError">@color/pink</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeMediumStyle</item>
    </style>

    <style name="Theme.DicodingStoryApp.Splash">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>